{
  "preset": "ts-jest/presets/default-esm",
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": "<rootDir>/tsconfig.json",
        "isolatedModules": true
      }
    ]
  },
  "testMatch": ["**/*.test.ts"],
  "setupFiles": ["<rootDir>/.jest/setup.js"],
  "prettierPath": "<rootDir>/../../node_modules/prettier-2/index.js"
}
