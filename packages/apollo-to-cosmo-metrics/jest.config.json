{
    "testEnvironment": "node",
    "preset": "ts-jest",
    "testMatch": [
      "**/*.unit.test.ts"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src /**/*.ts",
      "!src /**/*.d.ts"
    ],
    "modulePathIgnorePatterns": [
      "dist"
    ],
    "testPathIgnorePatterns": [
      "./__tests__/setup.ts"
    ],
    "prettierPath": "<rootDir>/node_modules/prettier-2/index.js",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
  